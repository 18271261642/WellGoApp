<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/border_radius_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/widget_size_10"
        android:paddingBottom="@dimen/widget_size_20">

        <TextView
            android:id="@+id/tvCommonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/widget_size_10"
            android:paddingBottom="@dimen/widget_size_10"
            android:paddingStart="@dimen/widget_size_20"
            android:paddingEnd="@dimen/widget_size_20"
            android:gravity="center"
            android:layout_gravity="center"
            tools:text="@string/content_title_exit_account"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tvCommonContent"
            android:layout_marginStart="@dimen/widget_size_10"
            android:layout_marginEnd="@dimen/widget_size_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/widget_size_50"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingStart="@dimen/widget_size_20"
            android:paddingEnd="@dimen/widget_size_20"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_15" />

    </LinearLayout>

    <View
        android:id="@+id/vCommonHorizontalDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_1"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCommonCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="@dimen/widget_size_15"
            android:paddingBottom="@dimen/widget_size_15"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_15" />

        <View
            android:id="@+id/vCommonVerticalDivider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/tvCommonConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="@dimen/widget_size_15"
            android:paddingBottom="@dimen/widget_size_15"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_15" />

    </LinearLayout>

</LinearLayout>