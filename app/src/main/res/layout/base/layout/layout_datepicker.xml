<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.truescend.gofit.views.NumberPicker
        android:id="@+id/yearView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:np_dividerThickness="0dp"
        app:np_formatter="%02d"
        app:np_max="2018"
        app:np_min="1900"
        app:np_selectedTextColor="#000000"
        app:np_selectedTextSize="25dp"
        app:np_textColor="#8F8F8F"
        app:np_textSize="20dp"
        app:np_value="2018"
        app:np_wrapSelectorWheel="true" />

    <TextView
        android:id="@+id/unit_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/unit_year"
        android:textSize="@dimen/text_size_18"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold" />

    <com.truescend.gofit.views.NumberPicker
        android:id="@+id/monthView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:np_dividerThickness="0dp"
        app:np_formatter="%02d"
        app:np_max="12"
        app:np_min="1"
        app:np_selectedTextColor="#000000"
        app:np_selectedTextSize="25dp"
        app:np_textColor="#8F8F8F"
        app:np_textSize="20dp"
        app:np_value="0"
        app:np_wrapSelectorWheel="true" />

    <TextView
        android:id="@+id/unit_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/unit_month"
        android:textSize="@dimen/text_size_18"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold" />

    <com.truescend.gofit.views.NumberPicker
        android:id="@+id/dayView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:np_dividerThickness="0dp"
        app:np_formatter="%02d"
        app:np_max="30"
        app:np_min="1"
        app:np_selectedTextColor="#000000"
        app:np_selectedTextSize="25dp"
        app:np_textColor="#8F8F8F"
        app:np_textSize="20dp"
        app:np_value="0"
        app:np_wrapSelectorWheel="true" />

    <TextView
        android:id="@+id/unit_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:text="@string/unit_day"
        android:textSize="@dimen/text_size_18"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold" />
</LinearLayout>