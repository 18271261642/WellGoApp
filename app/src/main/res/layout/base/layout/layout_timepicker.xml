<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.truescend.gofit.views.NumberPicker
        android:id="@+id/hourView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:np_dividerThickness="0dp"
        app:np_formatter="%02d"
        app:np_max="23"
        app:np_min="0"
        app:np_selectedTextColor="#000000"
        app:np_selectedTextSize="25dp"
        app:np_textColor="#8F8F8F"
        app:np_textSize="20dp"
        app:np_value="0"
        app:np_wrapSelectorWheel="true" />


    <TextView
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":" />

    <com.truescend.gofit.views.NumberPicker
        android:id="@+id/minuteView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:np_dividerThickness="0dp"
        app:np_formatter="%02d"
        app:np_max="59"
        app:np_min="0"
        app:np_selectedTextColor="#000000"
        app:np_selectedTextSize="25dp"
        app:np_textColor="#8F8F8F"
        app:np_textSize="20dp"
        app:np_value="0"
        app:np_wrapSelectorWheel="true" />
</LinearLayout>