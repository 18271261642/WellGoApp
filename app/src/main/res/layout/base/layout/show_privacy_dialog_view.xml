<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="10dp"
    app:shape_radius="15dp"
    app:shape_solidColor="@color/white"
    android:gravity="center"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/privacyTitleTv"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:padding="5dp"
        android:textSize="23sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户协议和隐私政策"/>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">



       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="17sp"
           android:padding="8dp"
           android:textColor="@color/black"
           android:layout_margin="10dp"
           android:lineSpacingExtra="5dp"
           android:text="@string/privacy_agreement_2"/>

       <TextView
           android:id="@+id/privacyAndAgreementTv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:textColor="@color/black"
           android:textSize="16sp"
           android:text="用户协议和隐私政策"/>



   </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">



        <com.hjq.shape.view.ShapeTextView
            app:shape_solidColor="@color/white"
            app:shape_radius="8dp"
            android:id="@+id/privacyCancelBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#E6000000"
            app:shape_solidPressedColor="#F4F4F4"
            android:textStyle="bold"
            android:textSize="18sp"
            app:shape_strokeWidth="1dp"
            app:shape_strokeColor="#F4F4F4"
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:text="@string/content_cancel"/>


      <!--  <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="#DBDBDB"/>
-->

        <com.hjq.shape.view.ShapeTextView
            app:shape_radius="8dp"
            app:shape_solidColor="@color/white"
            android:id="@+id/privacyConfirmBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18sp"
            app:shape_solidPressedColor="#F4F4F4"
            android:padding="10dp"
            app:shape_strokeWidth="1dp"
            app:shape_strokeColor="#F4F4F4"
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:textColor="#15A4FF"
            android:textStyle="bold"
            android:text="@string/content_confirm"/>


    </LinearLayout>


</com.hjq.shape.layout.ShapeLinearLayout>