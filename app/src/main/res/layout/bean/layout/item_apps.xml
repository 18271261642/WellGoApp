<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivPushItemIcon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="@dimen/widget_size_10"
        tools:src="@mipmap/icon_call_reminder"/>

    <TextView
        android:id="@+id/tvPushItemTitle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        tools:text="来电提醒"
        android:textSize="@dimen/text_size_12"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/cbPushItemSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/widget_size_20"
        android:layout_gravity="center_vertical"
        android:button="@null"
        android:background="@drawable/checkbox_switch_button"/>

</LinearLayout>