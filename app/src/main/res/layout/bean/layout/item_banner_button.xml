<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/widget_size_5"
    android:paddingEnd="@dimen/widget_size_5"
    android:paddingTop="@dimen/widget_size_10"
    android:paddingBottom="@dimen/widget_size_10"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">
    <ImageView
        android:layout_marginStart="20dp"
        android:id="@+id/ivBannerButtonTitleIcon"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />
    <TextView
        android:id="@+id/tvBannerButtonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/widget_size_10"
        tools:text="测试文字"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvBannerButtonContent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/widget_size_20"
        tools:text="1.17"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/ivBannerButtonIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_arrow_right" />

</LinearLayout>