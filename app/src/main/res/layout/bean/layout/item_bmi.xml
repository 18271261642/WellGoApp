<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/widget_size_5"
    android:paddingEnd="@dimen/widget_size_5"
    android:paddingTop="@dimen/widget_size_10"
    android:paddingBottom="@dimen/widget_size_10"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tvBMITitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/widget_size_10"
        tools:text="BMI指数"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvBMITips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/widget_size_10"
        tools:text="这是什么？"
        android:background="?attr/selectableItemBackground"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/tvBMIContent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/widget_size_20"
        android:gravity="end"
        tools:text="3.14  微胖"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/black"/>

    <ImageView
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_arrow_right" />

</LinearLayout>