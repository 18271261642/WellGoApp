<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/ivDetailsIconTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@mipmap/icon_heart"/>

    <TextView
        android:id="@+id/tvDetailsTitle"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        tools:text="心率详情"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/ivDetailsIconRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/widget_size_10"
        android:src="@mipmap/icon_ball_red"/>

    <TextView
        android:id="@+id/tvDetailsTextHeight"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/widget_size_5"
        android:paddingBottom="@dimen/widget_size_5"
        android:layout_height="wrap_content"
        tools:text="心率过高"
        android:textSize="@dimen/text_size_10"/>

    <ImageView
        android:id="@+id/ivDetailsIconYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/widget_size_10"
        android:src="@mipmap/icon_ball_yellow" />

    <TextView
        android:id="@+id/tvDetailsTextLow"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/widget_size_5"
        android:paddingBottom="@dimen/widget_size_5"
        android:layout_marginEnd="@dimen/widget_size_5"
        tools:text="心率过低"
        android:textSize="@dimen/text_size_10"/>


</LinearLayout>