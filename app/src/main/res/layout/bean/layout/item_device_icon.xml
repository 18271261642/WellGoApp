<?xml version="1.0" encoding="utf-8"?>
<com.truescend.gofit.views.SquareLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivDeviceIconImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/widget_size_10"
        tools:src="@mipmap/icon_camera"/>

    <TextView
        android:id="@+id/tvDeviceIconTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="远程拍照"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/black"/>

</com.truescend.gofit.views.SquareLinearLayout>