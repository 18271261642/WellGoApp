<?xml version="1.0" encoding="utf-8"?>
<com.truescend.gofit.views.SquareCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/widget_size_5"

    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/widget_size_5"
        android:layout_marginBottom="@dimen/widget_size_10"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivHomeCardPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@mipmap/icon_sport_mode_cycling" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvHomeCardSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_9"
                android:textStyle="bold"
                tools:text="我是子标题" />

            <TextView
                android:id="@+id/tvHomeCardSubTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_9"
                android:textStyle="bold"
                tools:text="我是子标题" />

            <TextView
                android:id="@+id/tvHomeCardSubTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_9"
                android:textStyle="bold"
                tools:text="我是子标题" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvHomeCardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_5"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold"
            tools:text="我是类型" />

    </LinearLayout>
</com.truescend.gofit.views.SquareCardView>