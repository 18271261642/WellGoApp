<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/widget_size_5"
    android:paddingBottom="@dimen/widget_size_5"
    android:layout_marginStart="@dimen/widget_size_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbWeekCycleSunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/widget_size_10"
            android:paddingEnd="@dimen/widget_size_10"
            android:text="周日"
            android:gravity="center"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_radio_button_bg"
            android:button="@null"
            android:translationX="3dp"
            android:background="@drawable/button_rectangle_white" />

        <CheckBox
            android:id="@+id/cbWeekCycleMonday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/widget_size_10"
            android:paddingEnd="@dimen/widget_size_10"
            android:text="周一"
            android:gravity="center"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_radio_button_bg"
            android:button="@null"
            android:translationX="2dp"
            android:background="@drawable/button_rectangle_white" />

        <CheckBox
            android:id="@+id/cbWeekCycleTuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/widget_size_10"
            android:paddingEnd="@dimen/widget_size_10"
            android:text="周二"
            android:gravity="center"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_radio_button_bg"
            android:button="@null"
            android:translationX="1dp"
            android:background="@drawable/button_rectangle_white" />

        <CheckBox
            android:id="@+id/cbWeekCycleWednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/widget_size_10"
            android:paddingEnd="@dimen/widget_size_10"
            android:text="周三"
            android:gravity="center"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_radio_button_bg"
            android:button="@null"
            android:background="@drawable/button_rectangle_white" />

        <CheckBox
            android:id="@+id/cbWeekCycleThursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/widget_size_10"
            android:paddingEnd="@dimen/widget_size_10"
            android:text="周四"
            android:gravity="center"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_radio_button_bg"
            android:button="@null"

            android:background="@drawable/button_rectangle_white" />

        <CheckBox
            android:id="@+id/cbWeekCycleFriday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/widget_size_10"
            android:paddingEnd="@dimen/widget_size_10"
            android:text="周五"
            android:gravity="center"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_radio_button_bg"
            android:button="@null"
            android:translationX="-2dp"
            android:background="@drawable/button_rectangle_white" />

        <CheckBox
            android:id="@+id/cbWeekCycleSaturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/widget_size_10"
            android:paddingEnd="@dimen/widget_size_10"
            android:text="周六"
            android:gravity="center"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_radio_button_bg"
            android:button="@null"
            android:translationX="-3dp"
            android:background="@drawable/button_rectangle_white" />

        
    </LinearLayout>

</LinearLayout>