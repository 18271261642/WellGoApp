<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/etFeedBackEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_size_10"
        android:padding="@dimen/widget_size_10"
        android:gravity="start|top"
        android:hint="@string/content_input_email"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black"
        android:maxLines="1"
        android:background="@drawable/border_radius_white"/>
    <EditText
        android:id="@+id/etFeedBackBand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_size_10"
        android:padding="@dimen/widget_size_10"
        android:gravity="start|top"
        android:hint="@string/content_input_band"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black"
        android:maxLines="1"
        android:background="@drawable/border_radius_white"/>
    <EditText
        android:id="@+id/etFeedBackInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_size_10"
        android:padding="@dimen/widget_size_10"
        android:gravity="start|top"
        android:hint="@string/content_feedback_content"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black"
        android:minLines="8"
        android:background="@drawable/border_radius_white"/>

    <TextView
        android:id="@+id/tvFeedBackPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/widget_size_15"
        tools:text="phone"
        android:textSize="@dimen/text_size_15"
        android:layout_gravity="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvFeedBackHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/widget_size_20"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvFeedBackSubmit"
            android:text="@string/content_submit"
            style="@style/TextViewButton" />

        <TextView
            android:padding="@dimen/widget_size_10"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="8sp"
            android:autoLink="email"
            android:layout_height="wrap_content"
            android:text="@string/content_or_contact_us" />
    </LinearLayout>

</LinearLayout>