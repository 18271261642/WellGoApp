<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/widget_size_50"
    android:background="@drawable/border_radius_white"
    android:minWidth="300dp"
    android:minHeight="80dp"
    android:orientation="vertical"
    android:padding="@dimen/widget_size_10">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/widget_size_10"
        android:text="@string/content_update_ing"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_1"
        android:layout_marginBottom="@dimen/widget_size_10"
        android:background="@color/grey_translucent" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/widget_size_10"
        android:textSize="@dimen/text_size_12" />

    <ProgressBar
        android:id="@+id/pbProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_size_10"
        android:minHeight="@dimen/widget_size_10"
        android:progressDrawable="@drawable/item_progressbar_update" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/widget_size_15"
        android:layout_marginEnd="@dimen/widget_size_15"
        android:layout_marginBottom="@dimen/widget_size_10"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvProgressRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%" />

    </LinearLayout>

</LinearLayout>