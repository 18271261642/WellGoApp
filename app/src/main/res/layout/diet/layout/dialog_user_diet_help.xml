<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/border_radius_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/widget_size_20"
        android:minWidth="250dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/widget_size_40"
            android:gravity="center"
            android:layout_gravity="start"
            android:text="@string/content_what_is_this"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/widget_size_50"
            android:gravity="start"
            android:layout_gravity="start"
            android:text="@string/content_diet_help_tips"
            android:textColor="@color/grey"
            android:lineSpacingExtra="@dimen/widget_size_1"
            android:textSize="@dimen/text_size_14" />


    </LinearLayout>

</LinearLayout>