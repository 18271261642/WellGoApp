<?xml version="1.0" encoding="utf-8"?>


<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rgUnitGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_diet_target_setting">

    <RadioButton
        android:id="@+id/rbUnitLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rectangle_white"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        android:paddingTop="@dimen/widget_size_3"
        android:paddingBottom="@dimen/widget_size_3"
        android:paddingStart="@dimen/widget_size_10"
        android:paddingEnd="@dimen/widget_size_10"
        android:text="@string/unit_kg"
        android:textColor="@color/text_radio_button_bg"
        android:textSize="@dimen/text_size_14" />

    <RadioButton
        android:id="@+id/rbUnitRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rectangle_white"
        android:button="@null"
        android:gravity="center"
        android:paddingTop="@dimen/widget_size_3"
        android:paddingBottom="@dimen/widget_size_3"
        android:paddingStart="@dimen/widget_size_10"
        android:paddingEnd="@dimen/widget_size_10"
        android:text="@string/unit_pounds"
        android:textColor="@color/text_radio_button_bg"
        android:textSize="@dimen/text_size_14"
         />

</RadioGroup>