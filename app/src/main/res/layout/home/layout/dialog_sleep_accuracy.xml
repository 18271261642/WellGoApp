<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/border_radius_white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/widget_size_20"
        android:minWidth="250dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/widget_size_40"
            android:gravity="center"
            android:layout_gravity="start"
            android:text="@string/content_sleep_accuracy"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_size_5"
            android:minHeight="@dimen/widget_size_50"
            android:gravity="start"
            android:layout_gravity="start"
            android:text="@string/content_sleep_accuracy_1"
            android:textColor="@color/grey"
            android:lineSpacingExtra="@dimen/widget_size_1"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_size_20"
            android:minHeight="@dimen/widget_size_50"
            android:gravity="start"
            android:layout_gravity="start"
            android:lineSpacingExtra="@dimen/widget_size_1"
            android:text="@string/content_sleep_accuracy_2"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

</LinearLayout>