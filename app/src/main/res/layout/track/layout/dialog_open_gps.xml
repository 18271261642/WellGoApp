<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/border_radius_white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/widget_size_20"
        android:text="@string/content_need_open_gps"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_1"
        android:layout_marginTop="@dimen/widget_size_10"
        android:background="@color/grey" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvGPSDialogOpen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/widget_size_10"
            android:gravity="center"
            android:text="@string/content_open_now"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_15"
            android:background="?attr/selectableItemBackground"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey"/>
        <TextView
            android:id="@+id/tvGPSDialogLeave"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/widget_size_10"
            android:gravity="center"
            android:text="@string/content_leave_running"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_15"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>

</LinearLayout>