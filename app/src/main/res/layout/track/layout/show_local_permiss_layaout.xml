<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/permissionDescTitleTv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_local_permiss_title"/>



    <TextView
        android:id="@+id/permissionDescCon1"
        app:layout_constraintTop_toBottomOf="@id/permissionDescTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="@string/string_local_permiss_txt1"/>



    <TextView
        android:id="@+id/permissionDescCon2"
        app:layout_constraintTop_toBottomOf="@id/permissionDescCon1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="@string/string_local_permiss_txt2"/>



    <TextView
        android:id="@+id/permissionDescCon3"
        app:layout_constraintTop_toBottomOf="@id/permissionDescCon2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="@string/string_local_permiss_txt3"/>



    <TextView
        android:id="@+id/localPermissionBtn"
        app:layout_constraintTop_toBottomOf="@+id/permissionDescCon3"
        android:layout_width="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginRight="25dp"
        android:layout_height="wrap_content"
        android:textColor="@color/themeColor11"
        android:text="@string/content_confirm"/>


</androidx.constraintlayout.widget.ConstraintLayout>