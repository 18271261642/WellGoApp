<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="250dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center">

        <TextView
            android:id="@+id/tvUserBirthdayExit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_height"
            android:paddingStart="@dimen/widget_size_20"
            android:paddingEnd="@dimen/widget_size_20"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="@string/content_exit"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserBirthdayConfirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_height"
            android:paddingStart="@dimen/widget_size_20"
            android:paddingEnd="@dimen/widget_size_20"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="@string/content_confirm"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_1"
        android:background="@color/grey"/>

    <com.truescend.gofit.views.DatePicker
        android:id="@+id/dpUserBirthdayDate"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/widget_size_20"
        android:layout_marginBottom="@dimen/widget_size_20"
        android:layout_gravity="center"
        >

    </com.truescend.gofit.views.DatePicker>
</LinearLayout>