<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <TextView
            android:id="@+id/tvUserGenderExit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_height"
            android:paddingStart="@dimen/widget_size_20"
            android:paddingEnd="@dimen/widget_size_20"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="@string/content_exit"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserGenderConfirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_height"
            android:paddingStart="@dimen/widget_size_20"
            android:paddingEnd="@dimen/widget_size_20"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="@string/content_confirm"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_1"
        android:background="@color/grey"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="200dp"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rbUserGenderFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_marginBottom="@dimen/widget_size_15"
            android:text="@string/content_gender_female"
            android:textSize="@dimen/text_size_15"/>

        <RadioButton
            android:id="@+id/rbUserGenderMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_15"
            android:text="@string/content_gender_male"
            android:textSize="@dimen/text_size_15"/>

    </RadioGroup>

</LinearLayout>