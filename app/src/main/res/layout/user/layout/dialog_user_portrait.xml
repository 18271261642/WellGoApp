<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/widget_size_15"
    android:paddingEnd="@dimen/widget_size_15"
    tools:background="@color/grey">

    <TextView
        android:id="@+id/tvUserPortraitTakePhoto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/widget_size_1"
        android:gravity="center"
        android:text="@string/content_take_photo"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/text_option_white_bg"
        android:background="@drawable/button_white_to_grey" />

    <TextView
        android:id="@+id/tvUserPortraitChoosePhoto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/widget_size_10"
        android:gravity="center"
        android:text="@string/content_choose_picture"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/text_option_white_bg"
        android:background="@drawable/button_white_to_grey" />

    <TextView
        android:id="@+id/tvUserPortraitCancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/widget_size_15"
        android:gravity="center"
        android:text="@string/content_cancel"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/text_option_white_bg"
        android:background="@drawable/button_white_to_grey" />

</LinearLayout>